<h1>検索</h1>

<%= render 'search_form'  %>

<% @posts.each do |post| %>
  <div>
    <%= label :name, '名前:' %>
    <%= post.name %>
  </div>
  <div>
    <%= label :text, '詳細:' %>
    <%= post.text %>
  </div>
  <div>
    <%= label :prefecture_id, 'エリア' %>
    <%= post.prefecture.name %>
  </div>
  <div>
    <%= label :category_id, 'カテゴリ' %>
    <%= post.category.name %>
  </div>
<% end %>